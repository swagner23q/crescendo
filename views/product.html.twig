<!DOCTYPE html>
<html>
    <head>

        {% include '/includes/head.html.twig' %}
    </head>
    <body>
        {% include '/includes/navbar.html.twig' %}
        <!-- Header -->
        <header class="mainProductTitle">
        </header>
        <!-- End Header -->

        <h1 class="mainTitle">{{ product.getGender }}'s {{product.getName}}</h1>

        <div class="articleClothing">
          <aside>
            <a class="modal-trigger" href="#modal1"><img src="{{ product.getImg }}" alt="{{product.getName}}" /></a>
            <div id="modal1" class="modal">
              <div class="modal-content">
                <img src='{{ product.getImg }}' alt="{{product.getName}}" />
              </div>
            </div>
          </aside>
          <div class="productInfoContainer">
            <div class="productInfoBox">
               <h1>Product Information</h1>
               <h2>Price: ${{ product.getPrice }}</h2>
               <p>{{ product.getDescription }}</p>

               <form action='/cart/add_item' method='post'>
                   <input id="product_id" name="product_id" type="hidden" value="{{ product.getId }}">
                   <label for="qty">Quantity:</label>
                   <select class="browser-default" id='qty' name='qty'>
                       <option value="" disabled selected>Choose Your Amount</option>
                       <option value="1">1</option>
                       <option value="2">2</option>
                       <option value="3">3</option>
                       <option value="4">4</option>
                       <option value="5">5</option>
                   </select>
                   {% if added %}
                   <h2>Added to cart!</h2>
                   {% endif %}
             <p><button type="submit" class="waves-effect waves-light btn">Add to Cart</button></p>
            </form>

            </div>
          </div>
        </div>
    {% include '/includes/footer.html.twig' %}
    </body>
</html>
